{
    // vscode ui
    "window.title": "${rootName}", // easier alt-tab glance
    "editor.fontFamily": "'Cascadia Mono NF', monospace",
    "terminal.integrated.fontFamily": "'Cascadia Mono NF', monospace",
    "terminal.integrated.suggest.enabled": false,
    "window.titleBarStyle": "custom",
    "window.dialogStyle": "custom",
    "window.zoomLevel": -0.25,
    "window.customMenuBarAltFocus": false,
    "window.enableMenuBarMnemonics": false,
    "window.confirmBeforeClose": "keyboardOnly",
    "workbench.startupEditor": "none",
    "workbench.panel.defaultLocation": "right",
    "workbench.activityBar.location": "default",
    "workbench.editor.wrapTabs": true,
    "explorer.compactFolders": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    // text editor ui
    "editor.fontLigatures": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.wordWrap": "on",
    "debug.console.acceptSuggestionOnEnter": "on",
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.codeLens": true,
    // theme
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.folders.color": "#fdd835",
    "material-icon-theme.folders.theme": "classic",
    "material-icon-theme.activeIconPack": "none",
    "material-icon-theme.saturation": 0.8,
    // saving and formatting
    "editor.formatOnSave": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "editor.formatOnPaste": false,
    // inlay
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.inlayHints.padding": true,
    "editor.inlayHints.fontSize": 12,
    // python
    "python.envFile": "",
    "python.defaultInterpreterPath": ".venv/bin/python",
    "python.terminal.activateEnvironment": false,
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.autoImportCompletions": true,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnType": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.callArgumentNames": "all",
    // jupyter
    "jupyter.debugJustMyCode": true,
    "jupyter.askForKernelRestart": false,
    "notebook.output.wordWrap": true,
    "notebook.defaultFormatter": "charliermarsh.ruff",
    "notebook.formatOnSave.enabled": true,
    "notebook.codeActionsOnSave": {
        "notebook.source.organizeImports": "explicit"
    },
    // cpp
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, TabWidth: 4, AccessModifierOffset: -4, AllowShortBlocksOnASingleLine: Empty, AllowShortFunctionsOnASingleLine: Empty }",
    // rust
    "rust-analyzer.check.command": "clippy",
    // git
    "git.confirmSync": false,
    "git.suggestSmartCommit": false,
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "always",
    // vscode remote and tailscale requirement
    "remote.SSH.useLocalServer": false,
    "remote.SSH.remotePlatform": {
        "ubuntu-pc": "linux"
    },
    // misc
    "security.workspace.trust.enabled": false,
    "debug.onTaskErrors": "showErrors",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.git": true,
        "**/.ipynb_checkpoints": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/.venv": true
    },
    "gitlens.mode.active": "zen",
    "errorLens.enabled": true,
    "chat.disableAIFeatures": true,
    "task.allowAutomaticTasks": "off",
}